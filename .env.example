# Ethereum RPC URL (e.g. Infura, Alchemy, or your own node)
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Private key of the root wallet (without 0x prefix)
# Can be a single key or multiple keys separated by commas
PRIVATE_KEY=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Number of new addresses to activate (must be greater than 0)
ADDRESS_COUNT=5

# Number of split loops to perform when distributing funds
SPLIT_LOOPS_COUNT=2

# Amount of ETH to send to each wallet (in ether)
AMOUNT_PER_WALLET=1

# Multiple to apply to the gas price to account for unexpected gas costs
GAS_BUFFER_MULTIPLIER=2

# Maximum number of retry attempts for failed transactions
MAX_RETRIES=3

# Base delay in milliseconds between retry attempts (will increase exponentially)
RETRY_BASE_DELAY_MS=1000

# Optional: Set log level (ERROR, WARN, INFO, DEBUG, TRACE)
RUST_LOG=info 